ETCD_NAME="{% for item in groups['all'] %}{% if item == ansible_host %}etcd{{ loop.index }}{% endif %}{% endfor %}"
ETCD_DATA_DIR="/var/lib/etcd"
ETCD_LISTEN_CLIENT_URLS="http://{{ ansible_host }}:2379,http://localhost:2379"
ETCD_LISTEN_PEER_URLS="http://{{ ansible_host }}:2380,http://localhost:2380"
ETCD_ADVERTISE_CLIENT_URLS="http://{{ ansible_host }}:2379"
ETCD_INITIAL_ADVERTISE_PEER_URLS="http://{{ ansible_host }}:2380"
ETCD_ELECTION_TIMEOUT=5000
ETCD_HEARTBEAT_INTERVAL=250
ETCD_INITIAL_CLUSTER="{% for item in groups['all'] %}etcd{{ loop.index }}=http://{{ item }}:2380{{ "," if not loop.last }}{% endfor %}"
ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"
ETCD_ENABLE_V2="true"

[security]
ETCD_CERT_FILE="/etc/ssl/server.pem"
ETCD_KEY_FILE="/etc/ssl/server-key.pem"
ETCD_CLIENT_CERT_AUTH="true"
ETCD_TRUSTED_CA_FILE="/etc/ssl/ca.pem"
ETCD_AUTO_TLS="false"
ETCD_PEER_CERT_FILE="/etc/ssl/pgnode2.pem"
ETCD_PEER_KEY_FILE="/etc/ssl/pgnode2-key.pem"
ETCD_PEER_CLIENT_CERT_AUTH="true"
ETCD_PEER_TRUSTED_CA_FILE="/etc/ssl/ca.pem"
ETCD_PEER_AUTO_TLS="false"
#
[logging]
ETCD_DEBUG="true"
